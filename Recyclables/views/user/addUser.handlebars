<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			{{#if regError}}
			<div class="alert alert-danger" style="text-align: center;">
			<ol>
			<p>Failure to create an account</p>

			{{#each regError}}
				<li>{{this}}</li>
				<br>
			{{/each}}
			</ol>
			</div>
			{{/if}}
			<h3 class="text-center">Add New Staff</h3>
			<form action="" method="post">
				<div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" name="name" value="" required>
				</div>
				<div class="form-group">
					<label for="type">Staff Type</label>
					<select name="type" id="type">
						<option value="cleaner">Cleaner</option>
						<option value="supervisor">Supervisor</option>
					</select>
				</div>
				<div class="form-group">
					<label for="mobileNum">Mobile Number</label>
					<input type="tel" class="form-control" name="mobileNum" value="" required>
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" class="form-control" value="" required>
				</div>
				<div class="form-group">
					<label for="password2">Confirm Password</label>
					<input type="password" name="password2" class="form-control" value="" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>