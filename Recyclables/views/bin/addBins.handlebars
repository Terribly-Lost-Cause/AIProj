<style>
	.input-box { 
  position: relative; 
}
input { 
  display: block; 
  border: 1px solid #d7d6d6; 
  background: #fff; 
  padding: 10px 56% 10px 20px; 
  padding-left: 60px;
  border-radius: 5px;
}
#header { 
  position: absolute; 
  display: block; 
  left: 5px; 
  top: 10px; 
  padding-right: 40%;
}
#remaining{
	position: absolute; 
  display: block; 
  right: 5px; 
  top: 10px; 
  z-index: 9; 
}
#urlStart { 
  position: absolute; 
  display: block; 
  left: 5px; 
  top: 10px; 
  z-index: 9; 
}

#urlEnd { 
  position: absolute; 
  display: block; 
  right: 1%; 
  top: 10px; 
  z-index: 9; 
}
</style>

<div class="row" style = "margin-top: 3%;">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<div id="error">

    				</div>
			{{#if regError}}
			<div class="alert alert-danger" style="text-align: center;">
			<ol>
			<p>Failure to create an account</p>

			{{#each regError}}
				<li>{{this}}</li>
				<br>
			{{/each}}
			</ol>
			</div>
			{{/if}}
			<h3 class="text-center">Add New Bin</h3>
			<form action="" method="post">
				<div class="form-group">
					<label for="camera" >Camera Address</label>
					<br>
					<div class="input-box">
  					<input name="camera" maxlength="15" value = "{{Camera}}" />
  					<span id="urlStart">https://</span>
					<span id="urlEnd">:8080//video</span>
					</div>
					<br>
					
					<label for="Location">Bin Location</label>
					{{#if location_description}}
					<input type="text" class="form-control" name="location" value="{{location_description}}" required>
					{{else}}
					<input type="text" class="form-control" name="location" value="{{location}}" required>
					{{/if}}
				</div>
				<div class="form-group">
					<div style= "display: inline-block;">
						<label for="level">Floor Level</label>
						{{#if floor_level}}
						<input class="form-control"  name="level" type="number" id="level" value="{{floor_level}}">
						{{else}}
					<input class="form-control"  name="level" type="number" id="level" value="{{lvl}}">
					{{/if}}
					</div>

					<div style= "display: inline-block; float:right;">
						<label for="threshold">Threshold</label>
						{{#if threshold}}
						<input type="number" name="threshold" class="form-control" value="900" min="0" required>
						{{else}}
					<input type="number" name="threshold" class="form-control" value="{{threshold}}" min="0" required>
					{{/if}}
					</div>
					
				
					
				</div>
				<div class="form-group">
					
					<label for="remarks">Remarks</label>
					{{#if remarks}}
					<input type="text" name="remarks" class="form-control" value="{{remarks}}">
					{{else}}
					<input type="text" name="remarks" class="form-control" value="{{remark}}">
					{{/if}}
				</div>
				{{#if binID}}
							<td>
								<button class="btn btn-info" style="float: right;" onerror="this.onerror=null; this.src='/img/video-error.png'" onclick="error()">Submit</button>
							</td>
							{{else}}
							<td>
								<button type="button" class="btn btn-success" onclick="error()">Submit</button>
							</td>
							{{/if}}
			</form>
		</div>
	</div>
</div>

<script>
	function error(){
		var ipaddress = document.getElementsByName('camera')[0].value
		document.getElementById("error").innerHTML= "<img id='currentPhoto' style='visibility: hidden;' src='https://" + ipaddress + ":8080//video' onerror='this.onerror=anothererror();'>"

	}

	function anothererror(){
		alert("ipaddress")
	}
</script>