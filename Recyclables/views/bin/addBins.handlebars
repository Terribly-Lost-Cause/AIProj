<div class="row" style = "margin-top: 3%;">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			{{#if regError}}
			<div class="alert alert-danger" style="text-align: center;">
			<ol>
			<p>Failure to create an account</p>

			{{#each regError}}
				<li>{{this}}</li>
				<br>
			{{/each}}
			</ol>
			</div>
			{{/if}}
			<h3 class="text-center">Add New Bin</h3>
			<form action="" method="post">
				<div class="form-group">
					<label for="camera">Camera Address</label>
					<input type="text" class="form-control" name="camera" value="" required>
					<label for="Location">Bin Location</label>
					<input type="text" class="form-control" name="location" value="" required>
				</div>
				<div class="form-group">
					<div style= "display: inline-block;">
						<label for="level">Floor Level</label>
					<input class="form-control"  name="level" type="number" id="level">
					</div>

					<div style= "display: inline-block; float:right;">
						<label for="threshold">Threshold</label>
					<input type="number" name="threshold" class="form-control" value="" min="0" required>
					</div>
					
				
					
				</div>
				<div class="form-group">
					<label for="remarks">Remarks</label>
					<input type="text" name="remarks" class="form-control" value="">
				</div>
				<button type="submit" class="btn btn-success">Submit</button>
			</form>
		</div>
	</div>
</div>

