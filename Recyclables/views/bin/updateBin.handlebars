<div class="row" style = "margin-top: 3%;">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			
			<h3 class="text-center">Update Bin</h3>
			<form action="" method="post">
				<div class="form-group">
					<label for="camera">Camera Address</label>
					<input type="text" class="form-control" name="camera" value=" {{Camera}}" required>
					<label for="Location">Bin Location</label>
					<input type="text" class="form-control" name="location" value="{{location}}" required>
				</div>
				<div class="form-group">
					<div style= "display: inline-block;">
						<label for="level">Floor Level</label>
					<input class="form-control"  name="level" type="number" id="level" value="{{lvl}}">
					</div>

					<div style= "display: inline-block; float:right;">
						<label for="threshold">Threshold</label>
					<input type="number" name="threshold" class="form-control" value="{{threshold}}" min="0" required>
					</div>
					
				
					
				</div>
				<div class="form-group">
					<label for="remarks">Remarks</label>
					<input type="text" name="remarks" class="form-control" value="">
				</div>
				<button type="submit" class="btn btn-success">Update Bin</button>
			</form>
		</div>
	</div>
</div>

